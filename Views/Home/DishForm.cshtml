@model Dish
<div class="mx-auto d-flex flex-column align-items-center mt-5">
    @{
        if (@Model != null)
        {
            <h1>@Model.Name</h1>
        }
        else
        {
            <h1>Add a New Dish</h1>
        }
    }
    <a class="align-self-start" href="/">Home</a>
    <form method="post" class="d-flex container flex-row justify-content-between align-items-start mt-4"
        action="@(@Model != null ? "/update/" + @Model.DishId  : "newdish")">
        <div class="col-3 d-flex flex-column align-items-start">
            <div class="">
                <label asp-for="Chef">Chef's Name</label>
                <input asp-for="Chef" type="text">
                <br>
                <span class="text-danger" asp-validation-for="Chef"></span>
            </div>
            <div>
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name" type="text">
                <br>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" type="number">
                <br>
                <span class="text-danger" asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="col-3 d-flex flex-column align-items-center">
            <label asp-for="Tastiness">Tastiness</label>
            <select class="w-25" asp-for="Tastiness">
                <option selected disabled hidden value=""></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span class="text-danger" asp-validation-for="Tastiness"></span>
        </div>
        <div class="col-4 d-flex flex-column align-items-center gap-2">
            <label asp-for="Description" class="">Description</label>
            <textarea type="text" asp-for="Description" cols="30" rows="10"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
            @{
                if (@Model == null)
                {
                    <button class="w-25 btn btn-primary text-center" type="submit">Add Dish</button>
                }
                else
                {
                    <button class="w-25 btn btn-primary text-center" type="submit">Edit Dish</button>
                }
            }
        </div>
    </form>
</div>